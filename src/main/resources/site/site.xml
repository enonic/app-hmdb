<?xml version="1.0" encoding="UTF-8"?>
<site xmlns="urn:enonic:xp:model:1.0">
    <x-data name="SoMe" allowContentTypes="person|movie"/>
    <form/>
    <mappings>
        <mapping controller="/controllers/graphql.js" order="50">
            <pattern>/_guillotine</pattern>
        </mapping>
        <mapping controller="/lib/external-frontend/proxy.js" order="99">
            <!--FIXME:  This match should only handle MAPPING_TO_THIS_PROXY (see lib/external-frontend/proxy.es6) and existing non-media contents,
                        and return 404 for the rest. But until https://github.com/enonic/xp/issues/8530 is fixed,
                        this is handled manually in proxy.es6: currently ONLY non-media types are not handled by this - even non-existing urls,
                        so the controller needs to manually look out for its own pattern MAPPING_TO_THIS_PROXY and for existing content, and return 404 for the rest. -->
            <match>type:'^(?!media:.*$).*'</match>
        </mapping>
    </mappings>
</site>
